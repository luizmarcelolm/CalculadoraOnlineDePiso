@model Piso

<div class="text-center">
    <h1 class="display-4">Criar cálculo da área</h1>
</div>
<br />

<form>
            <div class="text-center">
                <span class="text-center">Local da instalação</span><br />
                <input type="text" class="form-control" asp-for="Local" id="local" placeholder="Local">
            </div><br />

            <div class="text-center">
                 <span class="text-center">Medidas da área em metros</span><br />
                <input type="number" class="form-control" asp-for="Area1" id="medida1" placeholder="Medida da área 1">
                <input type="number" class="form-control" asp-for="Area2" id="medida2" placeholder="Medida da área 2">
            </div><br />

            <div class="text-center">
                <span class="text-center">Medidas do piso em metros</span><br />
                <input type="number" class="form-control"  asp-for="Piso1" id="medidaPiso1" placeholder="Medida do piso 1">
                <input type="number" class="form-control"  asp-for="Piso2" id="medidaPiso2" placeholder="Medida do piso 2">
            </div><br />

            <div class="text-center" role="group" aria-label="Basic outlined example">
                <button type="submit" role="button" class="btn btn-outline-success">Adicionar</button><br /><br />
                <a role="button" class="btn btn-outline-primary" asp-controller="Piso" asp-action="Index">Voltar</a>
            </div>
</form>
