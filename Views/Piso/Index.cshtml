@model List<Piso>

<div  id="index" class="text-center">
    <h1 class="display-4">Calcular área</h1>
    <div class="text-center">
        <a role="button" class="btn btn-outline-success" asp-controller="Piso" asp-action="Create" id="box2">ADICIONAR NOVO</a>

    </div>
    <br />

    <table class="table table-hover table-borderless">
            <thead>
                <tr>                
                    <th scope="col">LOCAL</th>       
                    <th scope="col">ÁREA</th>
                    <th scope="col">QUANT.</th>
                    <th scope="col">+10%</th>  
                    <th scope="col">AÇÃO</th>
                </tr>
            </thead>

                @foreach (var piso in Model)
                {
                    <tr>                     
                        <td>@piso.Local</td>        
                        <td>@piso.CalculoArea mts²</td>
                        <td>@piso.CalculoPiso peças</td>
                        <td>@piso.Opcao</td>

                         <th>
                            <a role="button" class="btn btn-outline-warning btn-icon" style="border:none; width:45px;" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="Look"><i class="fas fa-eye"></i></a>
                            <a role="button" class="btn btn-outline-success btn-icon" style="border:none; width:45px;" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="PaginaPDF"><i class="fas fa-file-pdf"></i></a>
                            <a role="button" class="btn btn-outline-primary btn-icon" style="border:none; width:45px;" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="Edit"><i class="fa fa-pencil-alt"></i></a>
                            <a role="button" class="btn btn-outline-danger btn-icon" style="border:none; width:45px;" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="Delete"><i class="fas fa-trash-alt"></i></a>
                         </th>
                    </tr>
                }
       
        </table>
</div></>


