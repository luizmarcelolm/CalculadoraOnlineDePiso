@model List<Piso>



<div class="text-center">
    <h1 class="display-4">Listagem das áreas calculadas</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-outline-success" asp-controller="Piso" asp-action="Create">Adicionar novo</a>
    </div>
    <br />

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Local</th>       
                    <th scope="col">Área mts²</th>
                    <th scope="col">Quant. de pisos</th>  
                    <th scope="col">Ação</th>
                </tr>

                @foreach (var piso in Model)
                {
                    <tr>
                        <td>@piso.Id</td>
                        <td>@piso.Local</td>        
                        <td>@piso.CalculoArea mts²</td>
                        <td>@piso.CalculoPiso peças</td>                   
                        <th><a role="button" class="btn btn-outline-primary" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="Edit">Editar </a>
                        <a role="button" class="btn btn-outline-danger" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="Delete">Excluir</a></th>
                    </tr>
                }
       
        </table>
</div></>


