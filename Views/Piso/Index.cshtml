@model List<Piso>

<div class="text-center">
    <h1 class="display-4">Listagem das áreas calculadas</h1>
    <div class="text-center">
        <a role="button" class="btn btn-outline-success" asp-controller="Piso" asp-action="Create" id="box2">Adicionar novo</a>

    </div>
    <br />

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Local</th>       
                    <th scope="col">Área</th>
                    <th scope="col">Quant.</th>
                    <th scope="col">+10%</th>  
                    <th scope="col">Ação</th>
                </tr>

                @foreach (var piso in Model)
                {
                    <tr>
                        <td>@piso.Id</td>
                        <td>@piso.Local</td>        
                        <td>@piso.CalculoArea mts²</td>
                        <td>@piso.CalculoPiso peças</td>
                        <td>@piso.Opcao</td>

                         <th>
                            <a role="button" class="btn btn-outline-warning btn-icon" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="Look"><i class="fas fa-eye"></i></a>
                            <a role="button" class="btn btn-outline-secondary btn-icon" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="PaginaPDF"><i class="fas fa-file-pdf"></i></a>
                            <a role="button" class="btn btn-outline-primary btn-icon" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="Edit"><i class="fa fa-pencil-alt"></i></a>
                            <a role="button" class="btn btn-outline-danger btn-icon" asp-route-id="@piso.Id" asp-controller="Piso" asp-action="Delete"><i class="fas fa-trash-alt"></i></a>
                        </th>
                    </tr>
                }
       
        </table>
</div></>


